{
  "version": 2,
  "builds": [
    {
      "src": "api/index.go",
      "use": "@vercel/go@3.0.0",
      "config": {
        "runtime": "go1.20"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.go"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "installCommand": "cd frontend && npm install",
  "buildCommand": "cd frontend && npm run vercel-build",
  "outputDirectory": "frontend/public",
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "GO_VERSION": "1.20"
    }
  }
}