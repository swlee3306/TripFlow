{
  "version": 2,
  "builds": [
    {
      "src": "api/index.go",
      "use": "@vercel/go@2.0.0",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "go1.22"
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "public"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.go"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "installCommand": "cd frontend && npm install",
  "buildCommand": "cd frontend && npm run vercel-build",
  "env": {
    "NODE_ENV": "production"
  }
}